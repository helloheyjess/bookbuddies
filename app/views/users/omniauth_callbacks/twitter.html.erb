<div class="row">
	<h2>Please provide your email</h2>
</div>
<div class="row">
	<%= @user.errors.full_messages.join(", ") %>

	<%= form_for @user, url: '/twitter_signup' do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.submit "Join" %>

		<%= f.hidden_field :provider %>
		<%= f.hidden_field :uid %>
	<% end %>
</div>