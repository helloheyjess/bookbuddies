<%= form_for(@user) do |f| %>
	<%= f.label :first_name  %>
	<%= f.text_field :first_name %>

	<%= f.label :last_name %>
	<%= f.text_field :last_name %>

	<%= f.label :user_name %>
	<%= f.text_field :user_name %>

	<%= f.label :city %>
	<%= f.text_field :city %>

	<%= f.label :bio %>
	<%= f.text_area :bio %>

	<%= f.submit %>
<% end %>