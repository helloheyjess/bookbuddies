<!DOCTYPE html>
<html>
<head>
  <title>Bookbuddies</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyB04y2SB1sBuX-_B4Q2xLQD3FaR8PfOzPY" %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/socialMetaInfo' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Google Analytics -->
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-76319713-1', 'auto');
  ga('send', 'pageview');
	</script>
</head>

<body>
	<header>
		<div class="header row">
			<div class="header__logo column small-12 medium-4">
				<h1><%= link_to "bookbuddies", root_path %></h1>
			</div>
			<div class="header__nav column small-12 medium-8">
				<nav>	
					<% if user_signed_in? %>
						<ul class="ul--reset">
							<li class="header__nav--link"><%= link_to "Groups", groups_path %></li>
							<li class="header__nav--link"><%= link_to "Profile", '/profile' %></li>
							<li class="header__nav--link"><%= link_to "Sign out", "/users/sign_out", method: 'delete' %></li>
						</ul>
					<% end %>
				</nav>
			</div>
		</div>
	</header>
	
	<main>
		<div class="main__wrapper">
			
			<%= yield %>
			
		</div>
	</main>
	
	<footer>
		<div class="footer row">
			<div class="column small-6">
				<h4>Book Buddies</h4>
				<p>By <%= link_to "Robin", "http://www.robinhamill.ca" %> and <%= link_to "Jess", "http://www.heyjess.ca/" %></p>
			</div>
			<div class="column small-6 text--right">
				<%= link_to "About", pages_about_path, class: "footer__link" %><br>
				<%= link_to "Contact", pages_contact_path, class: "footer__link" %>
			</div>
		</div>
	</footer>
</body>
</html>
