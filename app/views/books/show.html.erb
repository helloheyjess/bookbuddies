<section class="book book__show">
	<!-- SHOW BOOK -->
	<div class="book__container row">
		<%= image_tag @book.cover.url(:medium) %>
		<h3><%= @book.book_name %></h3>
		<p>Description: <%= @book.description %></p>
		<p>Author: <%= @book.author %></p>
		<p><%= @book.group_id %></p>
		
		<div>
			Group members:
			<% @members.each do |member| %>
				<%= image_tag member.user.profile.avatar.url(:thumb) %>
				<%= member.user.profile.first_name %>
				<br />
			<% end %>
		</div>
		<br />
		<%= link_to "Edit", edit_book_path(group_id: @book.group_id) %>
		<%= link_to "Delete book", book_path(@book, group_id: @group.id), method: :delete, data: { confirm: "Are you sure?"} %>
	</div>
	<div class="book__comments row">
		<!-- CREATE COMMENTS -->
		<div class="book__comments--create">
			<%= form_for(@comment.new) do |f| %>
				<p>Add a comment</p>
				<%= f.text_field :content, class: 'field--comment' %>
				<%= f.hidden_field :user_id, :value => current_user.id %>
				<%= f.hidden_field :book_id, :value => @book.id %>
				<%= f.submit "Add comment", class: 'button button--medium' %>
			<% end %>
		</div>
		<!-- LIST COMMENTS -->
		<div class="book__comments--list">
			<% @comments.each do |comment| %>
				<div class="comment__container">
					<%= image_tag comment.user.profile.avatar.url(:thumb)  %>
					<p><%= comment.content %></p>
					<small>Posted by: <%= comment.user.profile.first_name %> <%= comment.user.profile.last_name %> <%= time_ago_in_words(comment.created_at) %> ago.</small>
					<% if current_user.id == comment.user.profile.id %>
						<%= link_to "Delete comment", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?"} %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</section>