<%= form_for @book, multipart: true do |f| %>
	<% if @book.errors.any? %>
		 <ul>
		 	<% @book.errors.full_messages.each do |error| %>
		 		<li> <%= error %> </li>
		 	<% end %>
		 </ul>
	<% end %>


	<%= f.label :book_name %>
	<%= f.text_field :book_name %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :author %>
	<%= f.text_field :author %>
	<%= f.label :cover %>
	<%= f.file_field :cover %>
	<%= f.hidden_field :group_id, :value => @group.id %>
	<%= f.submit %>

<% end %>