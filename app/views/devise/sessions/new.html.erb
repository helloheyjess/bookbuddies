<section class="login template--pad">
  <div class="login__wrapper box-shadow">
    <div class="row text--center">
      <h2>Welcome to Bookbuddies!</h2>
      <p>Login to create book clubs, invite your buddies, and get the conversation started.</p>
    </div>
    <div class="form__container row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field rel">
          <%= f.label :email, class: "visually-hidden" %>
          <i class="fa fa-envelope"></i>
          <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
        </div>

        <div class="field rel">
          <%= f.label :password, class: "visually-hidden" %>
          <i class="fa fa-unlock-alt"></i>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field clearfix">
            <%= f.check_box :remember_me, class: "left" %><%= f.label :remember_me, class: "left" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "button" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
</section>
