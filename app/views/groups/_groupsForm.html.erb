<%= form_for @group do |f| %>
	<% if @group.errors.any? %>
		 <ul>
		 	<% @group.errors.full_messages.each do |error| %>
		 		<li> <%= error %> </li>
		 	<% end %>
		 </ul>
	<% end %>

	<div class="field">
		<%= f.label :group_name %>
		<%= f.text_field :group_name %>
	</div>
	<div class="field">
		<%= f.label :location, "Group Location" %>
		<%= f.text_field :location, placeholder: "ie. City Name" %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :meetup_location, "Meetup Address" %>
		<em><small>ex: 123 Main Street, City, State/Province</small></em>
		<%= f.text_field :meetup_location %>
	</div>
	<div class="field">
		<%= f.label :group_image %>
		<div>
			<%= image_tag @group.group_image.url(:thumb) %>
		</div>
		<div>
			<%= f.file_field :group_image %>		
		</div>
	</div>
	<div class="field">
		<%= f.submit class: 'button button--medium' %>
	</div>

<% end %>